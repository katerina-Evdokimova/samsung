<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon_dino">

    <ImageButton
        android:id="@+id/zmeika"
        android:layout_width="357dp"
        android:layout_height="102dp"
        android:backgroundTint="@color/colorFon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24"
        app:srcCompat="@drawable/zmeika" />

    <ImageButton
        android:id="@+id/knopka"
        android:layout_width="355dp"
        android:layout_height="110dp"
        android:backgroundTint="@color/colorFon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zmeika"
        app:layout_constraintVertical_bias="0.041"
        app:srcCompat="@drawable/knopkaodin" />
</androidx.constraintlayout.widget.ConstraintLayout>